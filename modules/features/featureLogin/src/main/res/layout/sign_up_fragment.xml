<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/tools">

    <data>
        <variable
            name="model"
            type="com.doneit.ascend.presentation.login.sign_up.SignUpContract.ViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:elevation="9dp" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <include
                    layout="@layout/group_icon_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="21dp"
                    android:drawablePadding="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    bind:hint="@{@string/full_name}"
                    bind:icon="@{@drawable/ic_user}"
                    bind:text="@={model.registrationModel.name}" />

                <include
                    layout="@layout/group_icon_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    bind:hint="@{@string/email}"
                    bind:icon="@{@drawable/ic_email}"
                    bind:text="@={model.registrationModel.email}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp">

                    <include
                        layout="@layout/group_icon_edit"
                        android:id="@+id/code"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        bind:hint="@{@string/code}"
                        bind:icon="@{@drawable/ic_phone}"
                        bind:text="@={model.registrationModel.phone}" />

                    <include
                        layout="@layout/group_icon_edit"
                        android:id="@+id/phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        bind:hint="@{@string/phone_number}"
                        bind:text="@={model.registrationModel.phone}" />
                </LinearLayout>

                <include
                    layout="@layout/group_icon_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    bind:hint="@{@string/password}"
                    bind:icon="@{@drawable/ic_password}"
                    bind:text="@={model.registrationModel.password}" />

                <include
                    layout="@layout/group_icon_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:drawablePadding="10sp"
                    android:paddingStart="10sp"
                    android:paddingEnd="10sp"
                    bind:hint="@{@string/password_confirm}"
                    bind:text="@{model.registrationModel.passwordConfirmation}" />


                <CheckBox
                    android:id="@+id/checkBox2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="I agree with Terms and Conditions and Privacy Policy" />

                <Button
                    style="@style/ActionButtonStyle"
                    android:layout_marginTop="16dp"
                    android:onClick="@{v -> model.registrationClick()}"
                    android:text="Continue" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="26dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Already a member??"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" Sign In"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/policyView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="16dp"
                    android:text="Privacy Policy"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/termsView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp"
                    android:text="Terms and Conditions"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>
