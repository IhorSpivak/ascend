<resources>
    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">

        <item name="hintTextAppearance">@style/HintStyle</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textColorHint">@color/default_font_color</item>

        <item name="colorControlNormal">@color/light_gray_e9f0</item>
        <item name="colorControlActivated">@color/light_gray_b1bf</item>
        <item name="colorControlHighlight">@color/light_gray_e9f0</item>
    </style>

    <style name="HintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/light_gray_b1bf</item>
    </style>

    <style name="SmsDigit">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">67dp</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@null</item>
        <item name="android:fontFamily">@font/red_hat_font</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:digits">0123456789</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:inputType">phone</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:maxLength">1</item>
        <item name="android:textCursorDrawable">@drawable/edit_cursor</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
    </style>
</resources>
