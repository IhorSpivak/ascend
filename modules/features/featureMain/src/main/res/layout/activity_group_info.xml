<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.text.Html"/>
        <variable
            name="model"
            type="com.doneit.ascend.presentation.main.group_info.GroupInfoContract.ViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/imageGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.555" />

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@id/imageGuide"
                app:layout_constraintTop_toTopOf="parent"
                app:setImage="@{model.group.image.url}"
                tools:background="@color/light_gray_e9f0" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:onClick="@{(v) -> model.onBackPressed()}"
                android:padding="8dp"
                android:src="@drawable/ic_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/mainGuide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.446" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="375dp"
                android:background="@drawable/bg_white_round_top"
                android:paddingStart="24dp"
                android:paddingTop="30dp"
                android:paddingEnd="24dp"
                android:clipToPadding="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/mainGuide">

                <TextView
                    android:id="@+id/title"
                    style="@style/Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@{model.group.name}"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/ic_info"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Title" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_info"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.doneit.ascend.presentation.main.views.MasterMindIcon
                    android:id="@+id/icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="24dp"
                    app:url="@{model.group.owner.image.url}"
                    app:name="@{model.group.owner.fullName}"
                    app:radius="@{@dimen/info_holder_radius}"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/title"/>

                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    style="@style/TextNormal"
                    android:textSize="14sp"
                    android:text="@{model.group.owner.fullName}"
                    app:layout_constraintVertical_chainStyle="packed"
                    app:layout_constraintStart_toEndOf="@id/icon"
                    app:layout_constraintEnd_toStartOf="@id/tvMeetings"
                    app:layout_constraintTop_toTopOf="@id/icon"
                    app:layout_constraintBottom_toTopOf="@id/rbRating"/>

                <androidx.appcompat.widget.AppCompatRatingBar
                    android:id="@+id/rbRating"
                    style="?android:attr/ratingBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:numStars="5"
                    android:rating="@{model.group.owner.rating}"
                    android:theme="@style/RatingBarTheme"
                    app:layout_constraintStart_toStartOf="@id/tvName"
                    app:layout_constraintTop_toBottomOf="@id/tvName"
                    app:layout_constraintBottom_toBottomOf="@id/icon"/>

                <TextView
                    android:id="@+id/tvMeetings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    android:textSize="16dp"
                    android:textColor="@color/light_gray_8f"
                    app:html="@{@string/meetings_count( 0, model.group.meetingsCount)}"
                    tools:text="@string/meetings_count"
                    app:layout_constraintTop_toTopOf="@id/icon"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/tvPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    style="@style/TextNormal"
                    app:html="@{@string/group_price(model.group.price)}"
                    tools:text="@string/group_price"
                    app:layout_constraintTop_toBottomOf="@id/tvMeetings"
                    app:layout_constraintEnd_toEndOf="@id/tvMeetings"
                    app:layout_constraintStart_toStartOf="@id/tvMeetings"/>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/brMaster"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="tvPrice,rbRating,icon"/>

                <Button
                    android:id="@+id/btnSubscribe"
                    style="@style/AppTheme.Button"
                    android:layout_marginTop="18dp"
                    android:enabled="@{model.group.subscribed}"
                    android:text="@{model.group.subscribed? @string/joined : @string/subscribe}"
                    android:onClick="@{(v) -> model.subscribe()}"
                    app:layout_constraintTop_toBottomOf="@id/brMaster"/>

                <Button
                    android:id="@+id/btnJoinToDisc"
                    style="@style/AppTheme.Button"
                    android:layout_marginTop="18dp"
                    android:background="@drawable/button_join_background"
                    android:text="@string/join_to_discussion"
                    android:textColor="@color/default_font_color"
                    android:textAllCaps="true"
                    android:onClick="@{(v) -> model.join()}"
                    app:layout_constraintTop_toBottomOf="@id/brMaster"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icCalendar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_calendar"
                    android:layout_marginTop="24dp"
                    app:layout_constraintTop_toBottomOf="@id/btnSubscribe"
                    app:layout_constraintStart_toStartOf="parent"/>

                <TextView
                    android:id="@+id/tvStartDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray_8f"
                    android:layout_marginStart="8dp"
                    tools:text="18 Aug 2019"
                    app:layout_constraintTop_toTopOf="@id/icCalendar"
                    app:layout_constraintBottom_toBottomOf="@id/icCalendar"
                    app:layout_constraintStart_toEndOf="@id/icCalendar"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/icSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_schedule"
                    android:layout_marginStart="30dp"
                    app:layout_constraintTop_toTopOf="@id/icCalendar"
                    app:layout_constraintBottom_toBottomOf="@id/icCalendar"
                    app:layout_constraintStart_toEndOf="@id/tvStartDate"/>

                <TextView
                    android:id="@+id/tvSchedule"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/TextNormal"
                    android:textSize="14sp"
                    android:textColor="@color/light_gray_8f"
                    android:layout_marginStart="8dp"
                    tools:text="Mon, Tue 13:00 pm"
                    app:layout_constraintTop_toTopOf="@id/icSchedule"
                    app:layout_constraintBottom_toBottomOf="@id/icSchedule"
                    app:layout_constraintStart_toEndOf="@id/icSchedule"/>

                <androidx.constraintlayout.widget.Barrier
                    android:id="@+id/brInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:barrierDirection="bottom"
                    app:constraint_referenced_ids="icCalendar,tvStartDate,icSchedule,tvSchedule"/>

                <TextView
                    android:id="@+id/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="@style/TextNormal"
                    app:layout_constraintTop_toBottomOf="@id/brInfo"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    app:cardElevation="2dp"
                    app:cardCornerRadius="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="64dp"
                    app:layout_constraintTop_toBottomOf="@id/description"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <LinearLayout
                        android:layout_margin="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_attendees"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            style="@style/TextNormal"
                            app:html="@{@string/attendees(model.group.participantsCount)}"
                            tools:text="12 Attendees"
                            android:layout_gravity="center_vertical"/>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>