<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.doneit.ascend.presentation.main.ascension_plan.AscensionPlanContract.ViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_sa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="4dp"
            android:padding="4dp"
            app:cardBackgroundColor="@color/button_pink"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toStartOf="@+id/cardView_plan"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:id="@+id/tv_goals"
                    style="@style/Title"
                    android:textColor="@android:color/white"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="My spiritual\nAction Steps"
                    android:textAllCaps="true"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_sa_steps"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow_sa_steps"
                    android:layout_width="15dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:rotation="270"
                    android:tint="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_down_arrow" />

                <TextView
                    style="@style/Title"
                    android:id="@+id/count_goals"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_plan_steps"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="4/5"
                    android:textColor="@color/button_pink"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_goals"
                    app:layout_constraintTop_toBottomOf="@+id/tv_goals" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView_plan"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/button_blue"
            app:cardCornerRadius="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/cardView_sa"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="4dp">

                <TextView
                    android:textSize="16sp"
                    android:textColor="@android:color/white"
                    android:id="@+id/tv_sa_steps"
                    style="@style/Title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="My Goals\nLists"
                    android:textAllCaps="true"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_plan_steps"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrow_plan_steps"
                    android:layout_width="15dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:rotation="270"
                    android:tint="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_down_arrow" />

                <TextView
                    style="@style/Title"
                    android:id="@+id/count_sa_steps"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_plan_steps"
                    android:includeFontPadding="false"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:text="4/5"
                    android:textColor="@color/button_blue"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="@+id/tv_sa_steps"
                    app:layout_constraintTop_toBottomOf="@+id/tv_sa_steps" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/day"
            style="@style/TextNormal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Today"
            android:textColor="@color/light_gray_8f"
            app:layout_constraintStart_toStartOf="@+id/cardView_sa"
            app:layout_constraintTop_toBottomOf="@+id/floating_sa"
            tools:text="Today" />

        <TextView
            android:textColor="@color/light_gray_8f"
            style="@style/TextNormal"
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2h 32m"
            app:layout_constraintBottom_toBottomOf="@+id/day"
            app:layout_constraintEnd_toEndOf="@+id/cardView_plan"
            tools:text="2h 32m" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/day" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_sa"
            android:visibility="invisible"
            android:backgroundTint="@android:color/white"
            style="@style/Widget.Design.FloatingActionButton"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            app:layout_constraintBottom_toBottomOf="@id/cardView_sa"
            app:layout_constraintEnd_toEndOf="@+id/cardView_sa"
            app:layout_constraintTop_toBottomOf="@id/cardView_sa"
            app:srcCompat="@drawable/ic_plus" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floating_plan"
            style="@style/Widget.Design.FloatingActionButton"
            android:backgroundTint="@android:color/white"
            android:background="@android:color/white"
            android:tint="@color/button_blue"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="16dp"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/cardView_plan"
            app:layout_constraintEnd_toEndOf="@+id/cardView_plan"
            app:layout_constraintTop_toBottomOf="@id/cardView_plan"
            app:srcCompat="@drawable/ic_plus" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>