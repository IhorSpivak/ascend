<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.doneit.ascend.presentation.main.home.HomeContract.ViewModel" />

        <variable
            name="adapter"
            type="com.doneit.ascend.presentation.main.home.common.TabAdapter" />

        <variable
            name="mastermindAdapter"
            type="com.doneit.ascend.presentation.main.home.common.MastermindAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/blMain"
            android:layout_width="match_parent"
            android:layout_height="@dimen/toolbar_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--<androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btbBack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="8dp"

                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_back"
                        android:tint="#7E7D8F"
                        android:visibility="visible"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
-->
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTitle"
                        style="@style/Title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btnSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_search"
                        android:visibility="visible"
                        android:onClick="@{() -> model.onSearchClick()}"
                        app:layout_constraintEnd_toStartOf="@+id/btbNotification"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatImageButton
                        android:id="@+id/btbNotification"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="15dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/ic_notifications"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> model.onNotificationClick()}"
                        android:visibility="visible"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/srLayout"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blMain">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp">

                    <com.doneit.ascend.presentation.main.views.NoSwipeViewPager
                        android:id="@+id/vpGroups"
                        android:layout_width="match_parent"
                        android:layout_height="410dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <com.google.android.material.tabs.TabLayout
                            android:id="@+id/tlGroups"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tabIndicatorColor="@android:color/transparent"
                            app:tabMode="scrollable"
                            app:tabSelectedTextColor="@color/colorAccent"
                            app:tabTextAppearance="@style/TapTextAppearance"
                            app:tabTextColor="@color/colorAccent_inactive">

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/t1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/t2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/t3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <com.google.android.material.tabs.TabItem
                                android:id="@+id/t4"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </com.google.android.material.tabs.TabLayout>
                    </com.doneit.ascend.presentation.main.views.NoSwipeViewPager>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/following"
                        style="@style/TextNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="32dp"
                        android:gravity="bottom"
                        android:text="@string/following"
                        android:textSize="24sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/vpGroups" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/all_masterm"
                        style="@style/TextNormalSecond"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="20dp"
                        android:text="@string/all_masterm"
                        android:clickable="true"
                        android:focusable="true"
                        android:onClick="@{() -> model.onAllMasterMindsClick()}"
                        app:layout_constraintBottom_toBottomOf="@+id/following"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/following" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/add_master_mind"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_stroke_plus"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/following" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/followerName"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="10dp"
                        android:gravity="center_horizontal|top"
                        android:text="@string/add_master_mind"
                        android:textColor="#B1B1BF"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="@id/add_master_mind"
                        app:layout_constraintStart_toStartOf="@+id/add_master_mind"
                        app:layout_constraintTop_toBottomOf="@id/add_master_mind" />

                    <androidx.constraintlayout.widget.Group
                        android:id="@+id/masterMindPlaceholder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:constraint_referenced_ids="add_master_mind,followerName" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvMasterminds"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginBottom="8dp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/following"
                        app:setAdapter="@{mastermindAdapter}" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>