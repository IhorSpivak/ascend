<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.doneit.ascend.presentation.main.home.group.GroupsContract.ViewModel" />

        <variable
            name="adapter"
            type="com.doneit.ascend.presentation.main.home.group.common.GroupAdapter" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGroups"
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setVisibility="@{model.groups}">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/joinGroupStroke"
                android:layout_width="240dp"
                android:layout_height="320dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:src="@drawable/ic_dash_stroke"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/join_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="@string/join_group"
                android:textColor="#B1B1BF"
                android:textSize="24sp"
                app:layout_constraintEnd_toEndOf="@id/joinGroupStroke"
                app:layout_constraintStart_toStartOf="@id/joinGroupStroke"
                app:layout_constraintTop_toTopOf="@id/joinGroupStroke" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/explore_fro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center_horizontal"
                android:text="@string/explore_fro"
                android:textColor="#B1B1BF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="@id/joinGroupStroke"
                app:layout_constraintStart_toStartOf="@id/joinGroupStroke"
                app:layout_constraintTop_toBottomOf="@id/join_group" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGroups"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:orientation="horizontal"
            android:visibility="gone"
            android:clipChildren="false"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:setAdapter="@{adapter}"
            app:setAdapterData="@{model.groups}"
            app:setVisibility="@{model.groups}" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/my_daily_gr"
            style="@style/TextNormalSecond"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="16dp"
            android:clickable="true"
            android:focusable="true"
            android:onClick="@{() -> model.navigateToGroupList()}"
            android:text="@{String.format(@string/group_list_template, model.groupName)}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/clGroups"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:src="@drawable/ic_help"
            app:layout_constraintBottom_toBottomOf="@+id/my_daily_gr"
            app:layout_constraintStart_toEndOf="@+id/my_daily_gr"
            app:layout_constraintTop_toTopOf="@+id/my_daily_gr" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>