<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="member"
            type="com.doneit.ascend.domain.entity.chats.MemberEntity" />

        <variable
            name="model"
            type="com.doneit.ascend.presentation.main.chats.chat.livestream_user_actions.LivestreamUserActionsContract.ViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_black_semitransparent"
            android:clickable="true"
            android:focusable="true">

            <com.doneit.ascend.presentation.views.MasterMindIcon
                android:id="@+id/ivUserIcon"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:maxWidth="160dp"
                android:maxHeight="160dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="64dp"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.64"
                app:name="@{member.fullName}"
                app:url="@{member.image.url}"
                />

            <TextView
                android:id="@+id/tvName"
                style="@style/TextNormal.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivUserIcon"
                android:text="@{member.fullName}"
                tools:text="Francisco Edwards" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="24dp"
                android:gravity="bottom"
                android:orientation="vertical"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                app:layout_constraintVertical_bias="1">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:alpha="0.8"
                    android:background="@color/light_gray_f8"
                    app:cardCornerRadius="14dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv"
                            style="@style/TextSFBlue"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="center"
                            android:textColor="@color/cancel_color"
                            android:onClick="@{(v) -> model.remove(member.id)}"
                            android:text="@string/remove"
                            android:textSize="20sp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/dark_gray" />

                        <TextView
                            android:id="@+id/tvReport"
                            style="@style/TextSFBlue"
                            android:layout_width="match_parent"
                            android:layout_height="58dp"
                            android:gravity="center"
                            android:text="@string/report"
                            android:textColor="@color/cancel_color"
                            android:textSize="20sp" />
                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/tvCancel"
                    style="@style/TextSFBlue"
                    android:layout_width="match_parent"
                    android:layout_height="58dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/bg_round_white"
                    android:gravity="center"
                    android:onClick="@{(v) -> model.onBackClick()}"
                    android:text="@string/btn_cancel"
                    android:textSize="20sp" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</layout>