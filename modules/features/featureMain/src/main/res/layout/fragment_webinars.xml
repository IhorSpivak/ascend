<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.doneit.ascend.presentation.main.home.webinars.WebinarsContract.ViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

            <LinearLayout
                android:id="@+id/filter_buttons_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="horizontal"
                android:background="@android:color/white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            <ToggleButton
                android:id="@+id/recovery"
                style="@style/AppTheme.Button"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/webinar_type_filter_button"
                android:textColor="@drawable/day_button_text_selector"
                android:textOff="@string/webinars_list_recovery"
                android:textOn="@string/webinars_list_recovery"/>

            <ToggleButton
                android:id="@+id/success"
                style="@style/AppTheme.Button"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/webinar_type_filter_button"
                android:textColor="@drawable/day_button_text_selector"
                android:textOff="@string/webinars_list_success"
                android:textOn="@string/webinars_list_success"/>

            <ToggleButton
                android:id="@+id/family"
                style="@style/AppTheme.Button"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/webinar_type_filter_button"
                android:textColor="@drawable/day_button_text_selector"
                android:textOff="@string/webinars_list_family"
                android:textOn="@string/webinars_list_family"/>

            <ToggleButton
                android:id="@+id/spiritual"
                style="@style/AppTheme.Button"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/webinar_type_filter_button"
                android:textColor="@drawable/day_button_text_selector"
                android:textOff="@string/webinars_list_spiritual"
                android:textOn="@string/webinars_list_spiritual"/>

            </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_groups"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/filter_buttons_container"
            tools:listitem="@layout/template_hor_group_item" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>