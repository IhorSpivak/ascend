<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="name"
            type="String" />

        <variable
            name="url"
            type="String" />

        <variable
            name="isHandRisen"
            type="Boolean" />

        <variable
            name="isMicroOff"
            type="Boolean" />

        <variable
            name="isSpeaker"
            type="Boolean" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:cardCornerRadius="50dp"
        app:cardElevation="0dp"
        android:clipChildren="true"
        android:layout_marginEnd="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.doneit.ascend.presentation.views.MasterMindIcon
                android:id="@+id/mmIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:name="@{name}"
                app:url="@{url}" />

            <com.twilio.video.VideoTextureView
                android:id="@+id/videoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:mirror="true"
                app:scaleType="balanced"
                android:visibility="invisible"/>

            <ImageView
                android:id="@+id/ivRiseHand"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="end|bottom"
                android:scaleType="centerInside"
                android:src="@drawable/ic_hand"
                android:visibility="@{isHandRisen}" />

            <ImageView
                android:id="@+id/ivMicroOff"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="start|bottom"
                android:scaleType="centerInside"
                android:src="@drawable/ic_micro_off"
                android:visibility="@{isMicroOff, default=gone}" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/ic_speaker_selection"
                android:visibility="@{isSpeaker, default=gone}" />

        </FrameLayout>

    </androidx.cardview.widget.CardView>
</layout>