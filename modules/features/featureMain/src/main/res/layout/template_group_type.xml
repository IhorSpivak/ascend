<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="title"
            type="String" />

        <variable
            name="description"
            type="String" />

        <variable
            name="titleColor"
            type="Integer" />

        <variable
            name="iconRes"
            type="android.graphics.drawable.Drawable" />

        <variable
            name="type"
            type="com.doneit.ascend.domain.entity.dto.GroupType" />

        <variable
            name="listener"
            type="com.doneit.ascend.presentation.main.create_group.select_group_type.SelectGroupTypeContract.ViewModel" />

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:clickable="true"
        android:focusable="true"
        android:onClick="@{() -> listener.selectGroupType(type)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:src="@{iconRes}"
                tools:src="@drawable/ic_webinar_type" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="37dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="37dp"
                android:gravity="center_horizontal"
                android:text="@{title}"
                android:textColor="@{titleColor}"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="Webinar"
                tools:textColor="@color/colorAccent" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="@{description}"
                android:textSize="14sp"
                tools:text="This webinar groups is an online meeting or presentation held via the Internet in real time" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>