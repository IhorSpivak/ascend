<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">#B1B1BF</item>
        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/red_hat_font</item>
    </style>

    <style name="TextNormal" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/red_hat_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF2D55</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
