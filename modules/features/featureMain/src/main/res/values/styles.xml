<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="buttonStyle">@style/AppTheme.Button</item>
        <item name="android:buttonStyle">@style/AppTheme.Button</item>

        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
    </style>

    <style name="AppTransparentToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowActionBarOverlay">true</item>

        <item name="windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">24sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/red_hat_font</item>
    </style>

    <style name="ButtonTextStyle" parent="Widget.AppCompat.Button">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/red_hat_font</item>
    </style>


    <style name="TextNormal" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/red_hat_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextNormal.White">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:letterSpacing">-0.04</item>
    </style>

    <style name="Title" parent="@style/TextNormal">
        <item name="android:letterSpacing">-0.02</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextSF" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/sf_ui_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TextSFBlue" parent="TextSF">
        <item name="android:textColor">@color/text_blue</item>
        <item name="android:textSize">17sp</item>
        <item name="android:letterSpacing">-0.02</item>
    </style>


    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#FF2D55</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
    </style>

    <style name="NoConnectionTransparentBottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:colorBackground">@android:color/transparent</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">false</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>

        <!--        <item fullName="android:backgroundDimEnabled">true</item>-->
        <!--        <item fullName="android:backgroundDimAmount">0.3</item>-->

    </style>

    <style name="BottomNavigationView.Inactive" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/red_hat_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/gray_accent_color</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/BottomNavigationView.Inactive">
        <item name="android:textColor">@color/default_font_color</item>
    </style>

    <style name="fabStyle">
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@color/gray_accent_color</item>
    </style>

    <style name="TextNormalSecond" parent="@style/TextNormal">
        <item name="android:textColor">#598E7E</item>
    </style>

    <style name="TapTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/red_hat_font</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="MasterMindTapTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/red_hat_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="RatingBarTheme">
        <item name="colorAccent">#7E7D8F</item>
    </style>

    <style name="HintStyle" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@color/light_gray_b1bf</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">

        <item name="hintTextAppearance">@style/HintStyle</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textColorHint">@color/light_gray_b1bf</item>

        <item name="colorControlNormal">@color/light_gray_e9f0</item>
        <item name="colorControlActivated">@color/light_gray_b1bf</item>
        <item name="colorControlHighlight">@color/light_gray_e9f0</item>
    </style>

    <style name="EditTextAppearance" parent="Widget.AppCompat.EditText">
        <item name="hintTextAppearance">@style/HintStyle</item>
        <item name="android:textColor">@color/default_font_color</item>
        <item name="android:textColorHint">@color/light_gray_b1bf</item>

        <item name="colorControlNormal">@color/light_gray_e9f0</item>
        <item name="colorControlActivated">@color/light_gray_b1bf</item>
        <item name="colorControlHighlight">@color/light_gray_e9f0</item>
        <item name="android:backgroundTint">@color/light_gray_e9f0</item>
    </style>

    <style name="AppThemeAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@android:color/black</item>
    </style>

    <style name="ProfileItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:height">42dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="MenuButtonDialogStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#007AFF</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@android:color/white</item>
        <item name="android:colorForeground">@color/colorAccent</item>
        <item name="colorSwitchThumbNormal">#f1f1f1</item>
    </style>

    <style name="PaymentsTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/red_hat_font</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
